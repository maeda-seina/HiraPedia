

<div class="row">
  <div class="col-md-9 col-md-push-3">
    <h2>投稿一覧</h2>
    <div class="box">
      <% @user.posts.each do |post| %>
    	<%= link_to users_post_path(post) do %>
      	  <%= attachment_image_tag post, :image, :fill, 600, 600, fallback: "no_image.jpg",size:"10×10" %>
      	<% end %>
   	   <h3><%= post.title %></h3>
   	   <div><%= link_to "編集する",edit_users_post_path(post), class: "btn btn-success" %></div>
      <% end %>
    </div>
    -------------------------------------------------------------------------------------------------------------------------------------
    <h2>お気に入り一覧</h2>
    <div class="box2">
      <% @favorite_posts.each do |favorite| %>
      <div>
      	<%= attachment_image_tag favorite, :image, :fill, 600, 600, fallback: "no_image.jpg",size:"100×100" %>
      </div>
      <strong>
        <%= favorite.title %>
      </strong>
      <% end %>
    </div>
  </div>
  <div class="col-xs-3 col-md-pull-9">

    <%= render partial: "profile", user: @user %>

    <% if @user == current_user %>
        <div>
          <%= link_to "編集する",edit_users_user_path(current_user), class: "btn btn-success" %>
        </div>
      <% else %>

        <div id="follow_buttons_<%= @user.id %>">
          <%= render partial: 'users/relationships/relationship', locals: { post: @post} %>
        </div>
      <% end %>

  </div>
</div>
