

<div class="row">
  <div class="col-md-9 col-md-push-3">
    <h2>投稿一覧</h2>
    <div class="box">
      <% @user.posts.each do |post| %>
    	<%= link_to users_post_path(post) do %>
      	  <%= attachment_image_tag post, :image, :fill, 300, 300, fallback: "no_image.jpg",size:"10×10" %>
      	<% end %>
   	   <h3><%= post.title %></h3>
   	   <div><%= link_to "編集する",edit_users_post_path(post), class: "btn btn-success" %></div>
      <% end %>
    </div>
    <div class="box2">
      <% @favorite_posts.each do |favorite| %>
      <div>
        <%= favorite.title %>
      </div>
      <div>
      	<%= attachment_image_tag favorite, :image, :fill, 300, 300, fallback: "no_image.jpg",size:"10×10" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-xs-3 col-md-pull-9">
  	<h2>プロフィール</h2>
  	<div>
  		<%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: "no_image.jpg",size:"10×10" %>
  	</div>

  	  <div>name
  	  	<%= @user.name %></div>
  	  <div>introduction
  	  	<%= @user.introduction %></div>
  	  <div>フォロー数
        <%= link_to follows_users_user_path do %>
  	  	  <%= @user.followings.count %>
        <% end %>
  	  </div>
  	  <div>フォロワー数
        <%= link_to followers_users_user_path do %>
  	  	  <%= @user.followers.count %>
        <% end %>
  	  </div>
      <% if @user == current_user %>
  	    <div>
          <%= link_to "編集する",edit_users_user_path(current_user), class: "btn btn-success" %>
        </div>
      <% else %>
        <div>
          <% if @user.followed_by?(current_user) %>
            <p><%=link_to "フォロー外す", users_user_relationships_path(@user.id), method: :delete, class: "btn btn-warning" %></p>
        <% else %>
            <p><%=link_to "フォローする", users_user_relationships_path(@user.id), method: :post, class: "btn btn-info" %></p>
        <% end %>
        </div>
      <% end %>
  </div>
</div>
