<div class="card mx-auto mt-5" style="width: 50%;">
  <div class="card-body mx-auto">

<%= form_with model:@post, url: users_post_index_path, local:true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <div class="row">
  	<div class="col-xs-10">
  	  <table class="table">
  	  	<thead>
  	  	<tr>
  	  	  <th>
  	  	  	<%= f.label :"画像" %><span class="badge badge-danger">必須</span>
  	  	  </th>
  	  	  <th>
  	  	  	<div>
              <label id="image">
  	  	  	    <%= f.attachment_field :image, id: "image-form" %>
                <p class="image-text">クリックしてファイルを選択してください</p>
                <div id="image-preview">
                  <img src="/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg" >
                </div>
              </label>
  	  	  	</div>
  	  	  </th>
  	  	</tr>
  	  	<tr>
  	      <th>
  	      	<%= f.label :"タイトル" %><span class="badge badge-danger">必須</span>
  	      </th>
  	      <th>
              <div class="form-group">
                <label for="exampleInputEmail1" class="bmd-label-floating">タイトル</label>
                  <%= f.text_field :title %>
              </div>
  	      </th>
  	  	</tr>
  	  	<tr>
  	  	  <th>
  	  	  	<%= f.label :"内容" %>
  	  	  </th>
  	  	  <th>
              <div class="form-group">
                <label for="exampleInputEmail1" class="bmd-label-floating">内容</label>
  	  	  	     <%= f.text_area :body %>
              </div>
  	  	  </th>
  	  	</tr>
  	  	<tr>
  	  	  <th>
  	  		<%= f.label :"住所" %><span class="badge badge-danger">必須</span>
  	  	  </th>
  	  	  <th>
              <div class="form-group">
                <label for="exampleInputEmail1" class="bmd-label-floating">住所</label>
  	  	  	     <%= f.text_area :address %>
              </div>
  	  	  </th>
  	  	</tr>
        <tr>
          <th>
            <%= f.label :"行き方" %>
          </th>
          <th>
            <div class="form-group">
                <label for="exampleInputEmail1" class="bmd-label-floating">行き方</label>
                 <%= f.text_area :access %>
              </div>
          </th>
        </tr>
  	  	<tr>
  	  	  <th>
  	  	  	<%= f.submit "投稿",class:"btn btn-outline-primary" %>
  	  	  </th>
  	  	</tr>
  	  </thead>
  	  </table>
  	</div>
  </div>
<% end %>
</div>
</div>

<style>
img {
  height: 150px;
  width: 150px;
}
</style>